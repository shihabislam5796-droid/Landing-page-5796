<script>
const myLink="https://shihabislam5796-droid.github.io/BD-Vote-24/";
let shareCount=0;
const requiredShares=12;
const reactions=['‚ù§Ô∏è','üò°','üî•','üëç','üí•','üíñ'];

function vote(option){
    showViralReactions(option);
    showConfettiShower();
    showSparkleExplosion();
    showFireworks();
    document.getElementById('share-text').style.display='block';
    alert("‡¶Ü‡¶™‡¶®‡¶ø ‡¶≠‡ßã‡¶ü ‡¶¶‡¶ø‡ßü‡ßá‡¶õ‡ßá‡¶®: "+(option==='yes'?'‡¶π‡ßç‡¶Ø‡¶æ‡¶Å ‚ù§Ô∏è':'‡¶®‡¶æ üò°'));
}

function showViralReactions(option){
    for(let i=0;i<10;i++){
        let r=document.createElement('div');
        r.className='reaction';
        r.style.left=Math.random()*(window.innerWidth-50)+'px';
        r.style.bottom='20px';
        r.style.fontSize=(24+Math.random()*24)+'px';
        r.textContent=reactions[Math.floor(Math.random()*reactions.length)];
        document.body.appendChild(r);
        setTimeout(()=>{r.remove();},2500);
    }
}

function showConfettiShower(){
    for(let i=0;i<80;i++){
        let c=document.createElement('div');
        c.className='confetti';
        c.style.left=Math.random()*window.innerWidth+'px';
        c.style.background=['#ff416c','#ffb347','#ffd700','#00c851','#33b5e5'][Math.floor(Math.random()*5)];
        document.body.appendChild(c);
        setTimeout(()=>{c.remove();},3500);
    }
}

function showSparkleExplosion(){
    for(let i=0;i<50;i++){
        let s=document.createElement('div');
        s.className='sparkle';
        s.style.left=Math.random()*window.innerWidth+'px';
        s.style.top=Math.random()*window.innerHeight+'px';
        s.style.width=(3+Math.random()*5)+'px';
        s.style.height=s.style.width;
        s.style.background=['#fff','#fffc','#ffd700'][Math.floor(Math.random()*3)];
        document.body.appendChild(s);
        setTimeout(()=>{s.remove();},2500);
    }
}

function showFireworks(){
    for(let i=0;i<10;i++){
        let f=document.createElement('div');
        f.className='firework';
        f.style.left=Math.random()*window.innerWidth+'px';
        f.style.top=Math.random()*window.innerHeight*0.7+'px';
        f.style.width='20px'; f.style.height='20px';
        f.style.background=['#ff416c','#ffb347','#ffd700','#00c851','#33b5e5'][Math.floor(Math.random()*5)];
        document.body.appendChild(f);
        f.style.animation='fireworkAnim 1.2s forwards';
        setTimeout(()=>{f.remove();},1200);
    }
}

function share(platform){
    let shareURL="";
    const text=encodeURIComponent("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶≠‡ßã‡¶ü ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßÅ‡¶®: "+myLink);
    if(platform==='whatsapp'){shareURL=`https://wa.me/?text=${text}`;}
    else if(platform==='imo'){shareURL=`https://imo.im/share?text=${text}`;}
    else if(platform==='messenger'){shareURL=`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(myLink)}`;}
    window.open(shareURL,"_blank");
    shareCount++;
    if(shareCount>=requiredShares){
        alert("üéâ ‡¶ß‡¶®‡ßç‡¶Ø‡¶¨‡¶æ‡¶¶! ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶Æ‡¶§‡¶æ‡¶Æ‡¶§ ‡¶∏‡¶æ‡¶¨‡¶Æ‡¶ø‡¶ü ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá ‚úÖ");
        window.location.href=myLink;
    } else{
        alert(`‡¶Ü‡¶™‡¶®‡¶ø ‡¶∂‡ßá‡ßü‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßá‡¶õ‡ßá‡¶® ${shareCount}/${requiredShares} ‡¶¨‡¶æ‡¶∞‡•§`);
    }
}

window.addEventListener('beforeunload',function(e){
    if(shareCount<requiredShares){window.location.href=myLink;}
});

